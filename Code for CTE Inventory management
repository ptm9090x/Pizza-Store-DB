WITH ingorder_info as (WITH ingredient_orderque  as
(SELECT
ord.item_id,
item_de.sku,
item_de.item_nam,
ingr.ing_id,
ingr.ing_name,
ingr.ing_weight,
ingr.ing_price,
rec.quantity as recipe_quantity,
sum (ord.quantity) as numoforder
FROM orders ord 
LEFT JOIN item_details item_de ON ord.item_id= item_de.item_id
LEFT JOIN recipe rec ON item_de.sku = rec.recipe_id
LEFT JOIN ingredient ingr ON ingr.ing_id = rec.ing_id
GROUP BY 
ord.item_id,
item_de.sku,
item_de.item_nam,
ingr.ing_id,
ingr.ing_name,
rec.quantity,
ingr.ing_weight,
ingr.ing_price) 

SELECT 
item_nam,
sku,
ing_price,
ing_id,
ing_name,
ing_weight,
numoforder,
numoforder * recipe_quantity as orderedamountof_ing,
ing_price/ing_weight as costper_ing,
(numoforder * recipe_quantity) * (ing_price/ing_weight) as total_ing_cost
 FROM 
 ingredient_orderque
GROUP BY 
recipe_quantity,
item_nam,
sku,
ing_price,
ing_weight,
ing_id,
numoforder,
ing_name,
item_id)

SELECT * FROM ingorder_info;

